<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main"
        android:orientation="vertical"
        android:weightSum="20"
        tools:context=".MainActivity">

        <include
            android:id="@+id/infoHeader"
            layout="@layout/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:background="@drawable/card_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="40dp"
                        android:id="@+id/headerInfo"
                        style="@style/header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textInfo"
                            style="@style/p_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:fontFamily="@font/hind_bold"
                            android:justificationMode="inter_word" />
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/enginesHeader"
                        style="@style/header" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/engine1"
                            style="@style/radio_text" />

                        <TextView
                            android:id="@+id/engine2"
                            style="@style/radio_text"
                            android:layout_below="@id/engine1" />

                        <TextView
                            android:id="@+id/engine3"
                            style="@style/radio_text"
                            android:layout_below="@id/engine2" />

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <RadioButton
                                android:id="@+id/engine1Value"
                                style="@style/radioButton" />

                            <RadioButton
                                android:id="@+id/engine2Value"
                                style="@style/radioButton"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/engine3Value"
                                style="@style/radioButton" />
                        </RadioGroup>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/infoFooter"
            layout="@layout/footer" />

    </LinearLayout>
</layout>
