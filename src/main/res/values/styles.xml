<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="h1_light">
        <item name="fontFamily">@font/hind_bold</item>
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="h2_light">
        <item name="fontFamily">@font/hind_medium</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="h2_dark">
        <item name="fontFamily">@font/hind_medium</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="p_dark">
        <item name="fontFamily">@font/hind_light</item>
        <item name="android:textSize">@dimen/p</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="radio_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="fontFamily">@font/hind_light</item>
        <item name="android:textSize">@dimen/p</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:buttonTint">@color/purple_700</item>
    </style>

    <style name="header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="fontFamily">@font/hind_medium</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="cardHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/hind_medium</item>
    </style>

    <style name="cardSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/hind_light</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="cardValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">33sp</item>
        <item name="android:fontFamily">@font/hind_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="cardUnit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/hind_light</item>
        <item name="android:textAlignment">center</item>
    </style>





</resources>